@page
@model IndexModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Game Store</title>
</head>
<body>
    <h1>Welcome to the Game Store!</h1>

    <!-- Display the list of games -->
    @if (Model.Games != null && Model.Games.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Genre</th>
                    <th>Price</th>
                    <th>Release Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model.Games)
                {
                    <tr>
                        <td>@game.Name</td>
                        <td>@game.Genre</td>
                        <td>@game.price</td>
                        <td>@game.ReleaseDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No games found.</p>
    }
</body>
</html>
